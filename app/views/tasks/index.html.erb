<h1>Tasks</h1>

<%= link_to 'create', new_task_path(@task) %>

<% @tasks.each do |task|%>
  <h4>Name: <%= task.name %></h4>
  <p>Description: <%= task.description %></p>
  <p><%= link_to 'more details', task_path(task)%></p>
  <p><%= link_to 'edit', edit_task_path(task) %></p>
  <p><%= link_to 'delete', task_path(task), method: :delete %></p>
<% end %>

